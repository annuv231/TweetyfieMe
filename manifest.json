{
  "manifest_version": 3,
  "name": "TweetyFieMe",
  "version": "1.0.0",
  "description": "An extension which let you verify on twitter lol",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "host_permissions": ["https://twitter.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "css": ["override.css"],
      "js": ["verify.js"],
      "run_at": "document_start"
    }
  ]
}
